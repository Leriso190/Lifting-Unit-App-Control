<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="4"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcvOverviewMain"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:layout_weight="1"
        tools:layout="@layout/fragment_overview" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLiftingUnit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3">

        <ImageView
            android:id="@+id/ivLiftingUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/lifting_unit"
            app:layout_constrainedHeight="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glhSingleStepMotor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glvSingleStepMotor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.38" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSingleStepMotor1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/main_buttons"
            app:layout_constraintStart_toStartOf="@id/glvSingleStepMotor1"
            app:layout_constraintTop_toTopOf="@id/glhSingleStepMotor1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glhSingleStepMotor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.43" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glvSingleStepMotor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.425" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnSingleStepMotor2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/main_buttons"
            app:layout_constraintStart_toStartOf="@id/glvSingleStepMotor2"
            app:layout_constraintTop_toTopOf="@id/glhSingleStepMotor2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glhLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.49" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glvLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.23" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnLight"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/main_buttons"
            app:layout_constraintStart_toStartOf="@id/glvLight"
            app:layout_constraintTop_toTopOf="@id/glhLight" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glhStepMotor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.545" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glvStepMotor1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.345" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnStepMotor1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/main_buttons"
            app:layout_constraintStart_toStartOf="@id/glvStepMotor1"
            app:layout_constraintTop_toTopOf="@id/glhStepMotor1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glhStepMotor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.545" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glvStepMotor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.626" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnStepMotor2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/main_buttons"
            app:layout_constraintStart_toStartOf="@id/glvStepMotor2"
            app:layout_constraintTop_toTopOf="@id/glhStepMotor2" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glhLiftTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glvLiftTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnLiftTable"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="60dp"
            android:backgroundTint="@color/main_buttons"
            app:layout_constraintStart_toStartOf="@id/glvLiftTable"
            app:layout_constraintTop_toTopOf="@id/glhLiftTable" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>